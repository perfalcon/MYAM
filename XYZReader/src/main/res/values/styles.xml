<resources  xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
    </style>

    <!--<style name="Theme.Bacon.Detail">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Collapsing Title Style -->
    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextAppearance.Inverse">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="ArticleDetailCardViewAppearanceLand">
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:shape">rectangle</item>
        <item name="cardElevation">1dp</item>
    </style>
    <!-- Detail CardView Style-->
    <style name="ArticleDetailCardViewAppearance">
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <!-- Article List CardView Style-->
    <style name="ArticleListCardView">
        <item name="android:layout_margin">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

</resources>
